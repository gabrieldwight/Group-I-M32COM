@model Group_I_M32COM.DbTableModel.Boat_type

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h2>Create</h2>

<h4>Boat class category type and sub boat class category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Boat_class_type" class="control-label"></label>
                <input asp-for="Boat_class_type" class="form-control" />
                <span asp-validation-for="Boat_class_type" class="text-danger"></span>
            </div>
            <div id="subcategorydiv" class="form-group">
                <label asp-for="Sub_Boat_Types[0].Sub_boat_class_type" class="control-label"></label>
                <input asp-for="Sub_Boat_Types[0].Sub_boat_class_type" class="form-control" aria-describedby="button-addon2" />
                <div class="input-group-append">
                    <input class="btn btn-outline-secondary" type="button" id="button-addon2" onclick="Dynamicforminput()" value="Add sub boat class"/>
                </div>
                <span asp-validation-for="Sub_Boat_Types" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

