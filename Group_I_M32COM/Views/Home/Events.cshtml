@model IEnumerable<Group_I_M32COM.DbTableModel.Event>

@{
    ViewData["Title"] = "Events";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">List of Upcoming events from today and future events</h1>

<div class="container">
    <div class="row">

        <!--To display the list of upcoming events that are greater than today-->
        @if (Model.Count() > 0)
        {
            <!--Event items-->
            @foreach (var item in Model)
            {
                <div class="col-lg-4">
                    <div class="our-team-main">

                        <div class="team-front">
                            <img src="http://placehold.it/110x110/9c27b0/fff?text=@Html.DisplayFor(model => item.Event_name)" class="img-fluid" />
                            <h3>@Html.DisplayFor(model => item.Event_name)</h3>
                            <strong>Event type:</strong><h4>@Html.DisplayFor(model => item.Event_Types.Event_type_name)</h4>
                            <strong>Event start date:</strong><p>@Html.DisplayFor(model => item.Event_Start_date)</p> 
                            <strong>Event end date:</strong><p>@Html.DisplayFor(model => item.Event_End_date)</p>
                        </div>

                        <div class="team-back">
                            <span>
                                <strong>Event description:</strong> @Html.DisplayFor(model => item.Event_description)
                            </span>
                        </div>

                    </div>
                </div>
                <!--Events items-->     
            }
        }
        else
        {
            <h4>Future upcoming events not available at the moment</h4>
        }

    </div>
</div>
